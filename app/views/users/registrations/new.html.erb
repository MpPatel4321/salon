<h2>Sign up</h2>
<hr>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name),
                       html: {class: 'form-horizontal'}) do |f| %>
                       <% byebug %>
  <%#= devise_error_messages! %>
  <%= render "users/shared/error_messages", resource: resource %>
    <div class="form-group">
      <%= f.label :first_name, class: "col-sm-4 control-label" %>
      <div class="col-sm-6">
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name",class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :last_name, class: "col-sm-4 control-label" %>
      <div class="col-sm-6 ">
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name",class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :role, "User", :value => "user" %>
      <%= f.radio_button :role, "user", :checked => true %>
      <%= f.label :role, "Owner", :value => "owner"  %>
      <%= f.radio_button :role, "owner", data: {behavior: "clickable" }%>
    </div>

    <div class="form-group">
      <%= f.label :email, class: "col-sm-4 control-label" %>
      <div class="col-sm-6">
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
                                  class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "col-sm-4 control-label" %>
      <div class="col-sm-6">
          <%= f.password_field :password, autocomplete: "off",
                                          class: "form-control" %>
      </div>
    </div>

   <div class="form-group">
      <%= f.label :password_confirmation, class: "col-sm-4 control-label" %>
      <div class="col-sm-6">
        <%= f.password_field :password_confirmation, autocomplete: "off",
                                                      class: "form-control" %>
      </div>
   </div>

   <div class="form-group">
      <div class="col-sm-offset-2 col-sm-6">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
      </div>
   </div>

   <div class="form-group">
      <div class="col-sm-offset-2 col-sm-6">
        <%= render "users/shared/links" %>
      </div>
   </div>
<% end %>
<div id="myModal" class="modal">
  <div class="modal-content div-false">
    <div class="popuptext" id="myPopup"></div>
  </div>
</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"
></script>
<script type="text/javascript">
  $(document).ready(function() {    
    $('input[type="radio"][data-behavior="clickable"]').click(function(evt) {
        jQuery.ajax({
        url:  "dashboard/owner_sign_up",
        type: "GET",
        dataType: "script"
      });
    });
  });
</script>